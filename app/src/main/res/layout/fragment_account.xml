<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logonew"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:alpha="0.50"/>


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_arrow"
            android:tint="@color/black"
            android:padding="14dp"
            android:id="@+id/ivback"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="ACCOUNT"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/rel"
        android:id="@+id/scroll"
        android:visibility="gone"
        android:layout_above="@+id/txt_signup"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/iv_image"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:id="@+id/txt_rider_id"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:background="@drawable/grey_bordershape"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:id="@+id/txt_name"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:background="@drawable/grey_bordershape"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:padding="5dp"
                android:id="@+id/txt_email"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:background="@drawable/grey_bordershape"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:padding="5dp"
                android:id="@+id/txt_num"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:background="@drawable/grey_bordershape"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:padding="5dp"
                android:id="@+id/txt_gender"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:background="@drawable/grey_bordershape"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:padding="5dp"
                android:id="@+id/txt_dob"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:background="@drawable/grey_bordershape"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Personal document"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="RC Front Image"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/txt_front"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/iv_front"/>

            </com.google.android.material.card.MaterialCardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="RC Back Image"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/txt_back"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                android:layout_margin="10dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/iv_back"/>

            </com.google.android.material.card.MaterialCardView>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Adhar Card"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/txt_adhar_card"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="70dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/iv_adhar"/>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/white_rounded"
        android:elevation="15dp"
        android:visibility="gone"
        android:id="@+id/ll_loading"
        android:layout_centerInParent="true">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/animation_view"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"/>



    </LinearLayout>
</RelativeLayout>